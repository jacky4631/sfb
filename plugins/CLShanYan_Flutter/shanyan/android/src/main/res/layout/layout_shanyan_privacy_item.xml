<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/shanyan_view_shanyan_privacy_rootlayout"
    android:layout_width="wrap_content"
    android:layout_height="100dp"
    android:orientation="horizontal">

    <RelativeLayout
        android:id="@+id/shanyan_view_privacy_checkbox_rootlayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:padding="5dp">

        <CheckBox
            android:id="@+id/shanyan_view_privacy_checkbox"
            android:layout_width="13dp"
            android:layout_height="13dp"
            android:background="@drawable/umcsdk_uncheck_image"
            android:button="@null"
            android:checked="false" />
    </RelativeLayout>

    <TextView
        android:id="@+id/shanyan_view_privacy_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_gravity="center"
        android:layout_toRightOf="@+id/shanyan_view_privacy_checkbox_rootlayout"
        android:lineSpacingMultiplier="1.3"
        android:padding="5dp"
        android:text="同意《运营商服务协议》并授权闪验获取本机号码"
        android:textColor="#222222"
        android:textSize="10sp" />
</RelativeLayout>
